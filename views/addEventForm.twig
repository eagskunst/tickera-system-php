{% extends "baseTemplate.twig" %}

{% block content %}

	<h1>Agregar nuevo evento</h1><br>

	<form action="add" method="post" enctype="multipart/form-data"><br>
		<input type="text" name="eventName" placeholder="Nombre del evento" required><br>
		<input type="text" name="eventDate" placeholder="Fecha del evento - AAAA-MM-DD HH:mm:ss" required><br>
		<input type="number" name="vipsAvailable" placeholder="Entradas VIP disponibles" required><br>
		<input type="number" name="platinumsAvailable" placeholder="Entradas Platino disponibles" required><br>
		<input type="number" name="highsAvailable" placeholder="Entradas Altos disponibles" required><br>
        <input type="number" name="mediumAvailable" placeholder="Entradas Medios disponibles" required><br>
        <button type="submit">Agregar</button>
	</form>

{% endblock %}
