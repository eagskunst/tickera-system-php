{% extends "baseTemplate.twig" %}

{% block content %}

	{% if responseMessage %}
		<div class="alert alert-danger m-0 text-center" role="alert">
			{{ responseMessage }}
		</div>
	{% endif %}

	{% if errorMessages is not same as(null) %}
		<div class="alert alert-danger m-0 text-center" role="alert">
			<ul>
				{% for msg in errorMessages %}
					{% if msg is not same as(null) and msg is not same as('') %}
						<li>{{ msg }}</li>
					{% endif %}
				{% endfor %}
			</ul>
		</div>
    {% endif %}
    
	<div class="register-container min-vh-100 py-5 default-bg">
		<div class="container py-5">
			<div class="text-register text-center primary-text mb-5">
				<h1>¡Empieza ya a disfrutar de los mejores eventos!</h1>
			</div>
			<div class="row">
				<div class="col-lg-7">
					<form class="shadow-lg rounded border border-dark p-5 darker-bg" action="signup" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<input class="form-control" type="text" name="firstName" placeholder="Nombre" required><br>
						</div>
						<div class="form-group">
							<input class="form-control" type="text" name="lastName" placeholder="Apellido" required><br>
						</div>
						<div class="form-group">
							<input class="form-control" type="number" name="countryId" placeholder="Cedula" placeholder="27947561" required>
							<br>
						</div>
						<div class="form-group">
							<input class="form-control" type="text" name="address" placeholder="Direccion" required><br>
						</div>
						<div class="form-group">
							<label for="gender" class="form-text primary-text">Elige tu G&eacute;nero</label>
							<select class="form-control" name="gender">
								<option value="Hombre">Hombre</option>
								<option value="Mujer">Mujer</option>
								<option value="Otro">Otro</option>
							</select><br>
						</div>
						<div class="form-group">
							<input class="form-control" type="tel" name="phoneNumber" placeholder="Numero telefónico 414-1111111" pattern="[0-9]{3}-[0-9]{7}" required><br>
						</div>
						<div class="form-group">
							<input class="form-control" type="email" name="email" placeholder="Email" required><br>
						</div>
						<div class="form-group">
							<input class="form-control" type="text" name="username" placeholder="Nombre de usuario" required><br>
						</div>
						<div class="form-group">
							<input class="form-control" type="password" name="password" placeholder="Contraseña" required><br>
						</div>
						<div class="form-group">
							<input class="form-control" type="password" name="cpassword" placeholder="Confirma tu contraseña" required><br>
						</div>

						<button class="btn btn-dark w-100" type="submit">Registrarme</button>
					</form>
				</div>
				<div class="col-lg-5 p-5 d-md-none d-lg-block primary-text text-center">
					<div class="d-flex">{{ source('assets/register.svg') }}</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
